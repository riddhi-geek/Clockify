<%= form_for(@shift) do |f| %>
	<div class="row">
		<div class='col-sm-6'>
		  <div class="form-group">
		    <%= f.label :title %>
		    <%= f.text_field :title, class: 'form-control' %>
		  </div>
		  <div class="form-group">
		  	<div class='input-group date' id='shift_date'>
		    	<%= f.text_field :shift_date, label: false, placeholder: "Select the date", class: "form-control" %>
		     	<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
		    </div>
		    <br>
		    <%= f.submit "#{@shift.new_record? ? 'Save' : 'Update'} Shift", class: 'btn btn-primary' %>
		  </div>
		</div>
	</div>
<% end %>

<% content_for :javascript do %>
	<script>
		$('#shift_date').datetimepicker({
	   sideBySide: true,
	   format: "YYYY-MM-DD"
	  });
	</script>
<% end %>